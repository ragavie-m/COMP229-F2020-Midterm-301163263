<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<!-- ADD YOU CODE TO CREATE THE ADD PAGE -->
<div class="container">
    <div class = "row">
        <div class = "offset-md-3 col-md-6">
            <h1> <%= title %></h1>

                <!--Creates fields for each variable in the books list ie name, price, description for user to populate into database-->
                <form class = "form" method = "POST">
                    <div class = "form-group">
                        <label for = "nameTextField">Book Name</label>
                        <input type = "text" class = "form-control" id = "nameTextField" placeholder = "Enter the Book's Title" name = "name" required>
                    </div>
                    
                    <div class = "form-group">
                        <label for = "authorTextField">Author</label>
                        <input type = "text" class = "form-control" id = "authorTextField" placeholder = "Enter the Author's Name" name = "author" required>
                    </div>

                    <div class = "form-group">
                        <label for = "publishedTextField">Publication Year</label>
                        <input type = "text" class = "form-control" id = "publishedTextField" placeholder = "Enter the Year of Publication" name = "published" required>
                    </div>

                    <div class = "form-group">
                        <label for = "descriptionTextField">Description</label>
                        <input type = "text" class = "form-control" id = "descriptionTextField" placeholder = "Enter a Description of the Book" name = "description" required>
                    </div>

                    <div class = "form-group">
                        <label for = "priceTextField">Price</label>
                        <input type = "text" class = "form-control" id = "priceTextField" placeholder = "Enter the Price of the Book" name = "price" required>
                    </div>
                    
                    
                    <!--Creates a submit and cancel button for user to click. submit will process the change and cancel will not-->
                    <button class = "btn btn-primary" type = "submit">
                        <i class = "fas fa-edit"></i> Submit </button>

                    <a href= "/book-list" class="btn btn-warning"><i class = "fas fa-undo"></i>Cancel</a>
                </form>

        </div>
    </div>
</div>

