<div class="container">
    <div class = "row">
        <div class = "offset-md-3 col-md-6">
<h1> <%= title %></h1>

<form class = "form" method = "POST">
    <div class = "form-group">
        <label for = "nameTextField">Book Name</label>
        <input type = "text" class = "form-control" id = "nameTextField" placeholder = "Enter the Book's Title" name = "name" value = "<%= book.name %>" required>
    </div>
    
    <div class = "form-group">
        <label for = "authorTextField">Author</label>
        <input type = "text" class = "form-control" id = "authorTextField" placeholder = "Enter the Author's Name" name = "author" value = "<%= book.author %>"required>
    </div>

    <div class = "form-group">
        <label for = "publishedTextField">Publication Year</label>
        <input type = "text" class = "form-control" id = "publishedTextField" placeholder = "Enter the Year of Publication" name = "published" value = "<%= book.published %>"required>
    </div>

    <div class = "form-group">
        <label for = "descriptionTextField">Description</label>
        <input type = "text" class = "form-control" id = "descriptionTextField" placeholder = "Enter a Description of the Book" name = "description" value = "<%= book.description %>" required>
    </div>

    <div class = "form-group">
        <label for = "priceTextField">Price</label>
        <input type = "text" class = "form-control" id = "priceTextField" placeholder = "Enter the Price of the Book" name = "price" value = "<%= book.price %>" required>
    </div>
    
    <button class = "btn btn-primary" type = "submit">
        <i class = "fas fa-edit"></i> Submit </button>

    <a href= "/book-list" class="btn btn-warning"><i class = "fas fa-undo"></i>Cancel</a>
</form>

</div>
</div>
</div>

